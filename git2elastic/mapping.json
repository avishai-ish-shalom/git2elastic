{
  "settings": {
    "analysis": {
      "analyzer": {
        "path_analyzer": {
          "tokenizer": "path_hierarchy"
        }
      }
    }
  },
  "mappings" : {
    "git": {
      "dynamic_templates": [
        {
          "string": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword"
            }
          }
        }
      ],
      "properties" : {
        "date" : { "type" : "date" },
        "message" : { "type" : "text" },
        "stats_total" : {
          "properties" : {
            "deletions" : {
              "type" : "long"
            },
            "files" : {
              "type" : "long"
            },
            "insertions" : {
              "type" : "long"
            },
            "lines" : {
              "type" : "long"
            }
          }
        },
        "summary" : { "type" : "text" },
        "path": { 
          "type": "text",
          "analyzer": "path_analyzer",
          "search_analyzer": "keyword",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
